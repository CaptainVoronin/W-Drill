<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sc.w_drill" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_72_red"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActDictionaryList"
            android:icon="@drawable/logo_72_black"
            android:label="@string/title_activity_act_dictionary_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sc.w_drill.MainActivity" />
        </activity>
        <activity
            android:name=".ActDictionaryEntry"
            android:label="@string/title_activity_act_dictionary_entry"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sc.w_drill.MainActivity" />
        </activity>
        <activity
            android:name=".ActCheckWords"
            android:label="@string/title_activity_act_check_words"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sc.w_drill.MainActivity" />
        </activity>
        <activity
            android:name=".ActLearnWords"
            android:label="@string/title_activity_act_learn_words"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sc.w_drill.MainActivity" />
        </activity>
        <activity
            android:name=".ActSettings"
            android:label="@string/title_activity_act_settings" >
        </activity>
        <activity
            android:name=".ActAbout"
            android:label="@string/title_activity_act_about"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sc.w_drill.MainActivity" />
        </activity>
    </application>

</manifest>
