<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="ExtrLargeTitleStyle">
        <item name="android:color">@color/DkBrown</item>
        <item name="android:textSize">20pt</item>
    </style>

    <style name="LargeTitleStyle">
        <item name="android:color">@color/TextGray</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="SubHeader">
        <item name="android:color">@color/TextLtGray</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="Header2">
        <item name="android:color">@color/TextGray</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">6pt</item>
        <item name="android:paddingBottom">6pt</item>
    </style>

    <style name="Header3">
        <item name="android:color">@color/TextGray</item>
        <item name="android:textSize">10pt</item>
    </style>

    <style name="NoteText">
        <item name="android:color">@color/TextGray</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="button_text" >
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#fff</item>"
    </style>

    <style name="strong" parent="LargeTitleStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header3Strong" parent="Header3">
        <item name="android:textStyle">bold</item>
    </style>



</resources>
