<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="org.sc.w_drill.ActLearnWords">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12pt"
        android:layout_margin="12pt"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:background="@drawable/shadow_layer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/ExtrLargeTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[...]"
                android:layout_weight="0.7"
                android:id="@+id/word"
                android:paddingBottom="12pt"/>
            <org.sc.w_drill.utils.Triangle
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:position="upper_right"
                app:color="@color/MidBrown"
                app:dimension="20sp"
                android:id="@+id/learnIndicator"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            style="@style/LargeTitleStyle"
            android:textStyle ="italic"
            android:textColor="@color/TextLtGray"
            android:id="@+id/examples"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center_horizontal"
                android:background="#aaa"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/strong_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_part_of_speech"/>

        <TextView
            style="@style/LargeTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="[...]"
            android:paddingLeft="3pt"
            android:paddingTop="8pt"
            android:paddingBottom="8pt"
            android:id="@+id/meaning"/>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="[...]"
            android:id="@+id/transcription"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3pt"
        android:paddingBottom="3pt"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_iknow"
            android:textSize="12pt"
            android:paddingRight="3pt"
            android:text="@string/i_know"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_idontknow"
            android:paddingLeft="3pt"
            android:textSize="12pt"
            android:text="@string/i_dontknow"/>
    </LinearLayout>

</LinearLayout>