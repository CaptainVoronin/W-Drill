<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.sc.w_drill.ActNewDictionary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LargeTitleStyle"
        android:text="@string/new_dictionary_comment"
        android:id="@+id/MainTitle"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_dict_name_prompt"
        android:id="@+id/enter_dict_name_prompt"
        android:layout_below="@+id/MainTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_new_dict_name"
        android:layout_below="@+id/MainTitle"
        android:layout_toRightOf="@+id/enter_dict_name_prompt"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignBaseline="@+id/enter_dict_name_prompt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:id="@+id/textView4"
        android:layout_below="@+id/ed_new_dict_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listLanguages"
        android:layout_below="@+id/textView4"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignLeft="@+id/ed_new_dict_name"
        android:layout_alignStart="@+id/ed_new_dict_name" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listLanguages"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:id="@+id/btnOk"
            android:onClick="createNewDictionary" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:id="@+id/btnCancel"
            android:onClick="cancel" />
    </LinearLayout>


</RelativeLayout>
